{% if create_environments %}apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

namespace: {{ namespace }}-prod

resources:
  - ../../base

namePrefix: prod-

commonLabels:
  environment: prod

{% if app_type in ['stateless', 'stateful'] %}
patches:
  - patch: |-
      - op: replace
        path: /spec/replicas
        value: 3
    target:
      kind: {% if app_type == 'stateless' %}Deployment{% else %}StatefulSet{% endif %}
{% endif %}
{% endif %}