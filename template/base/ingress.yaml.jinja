{% if enable_ingress %}apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ project_name }}
  namespace: {{ namespace }}
  annotations:
    cert-manager.io/cluster-issuer: letsencrypt-prod
spec:
  ingressClassName: {{ ingress_class }}
  rules:
    - host: {{ ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: {{ project_name }}
                port:
                  number: {{ service_port }}
  tls:
    - hosts:
        - {{ ingress_host }}
      secretName: {{ project_name }}-tls
{% endif %}
